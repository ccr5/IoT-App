			rgba: 180, 180, 180, 0.8
		Rectangle:
			pos: self.pos
			size: self.size
	
	GridLayout:

		cols: 1
		rows: 3

		ActionBar:
			pos_hint: {'top':1}
			background_color: 0, 0, 0, 0.3

			ActionView:

				ActionPrevious:
					app_icon: ''
					app_icon_width: 0
					on_release: app.root.current = 'main'

				ActionLabel:
					text: 'Gestão de Equipamentos'

		GridLayout:

			cols: 2
						
			Button:
				background_normal: './images/door.png'
				size_hint: None, None
				size: 100, 100
				on_release: root.send_post('http://192.168.43.10/door')

			Label:
				text: ''

			Button:
				background_normal: './images/window.png'
				size_hint: None, None
				size: 100, 100
				on_release: root.send_post('192.168.1.34/')

			Label:
				text: ''

			Button:
				background_normal: './images/lamp.png'
				size_hint: None, None
				size: 100, 100
				on_release: root.send_post('http://192.168.43.11/lamp')

			Label:
